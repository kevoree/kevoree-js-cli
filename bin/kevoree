#!/usr/bin/env node

var kConst = require('kevoree-const');
var commander = require('commander');
var pkg = require('../package.json');

commander.version(pkg.version);

commander.command('clean', 'Delete installed modules out of the cache folder');
commander.command('init', 'Initialize Kevoree\'s ' + kConst.CONFIG_PATH);
commander.command('start', 'Start a Kevoree Javascript runtime (default command)', { isDefault: true });

commander.parse(process.argv);
